---
import Section from "@/components/Section.astro";
import JobCard from "@/components/JobCard.astro";
import HonorCard from "@/components/HonorCard.astro";
import MainLayout from "@/layouts/main/main.layout.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import {
  ABOUT_INFO,
  SKILL_SETS,
  JOBS,
  HONORS,
  PROJECTS,
} from "@/scripts/constants";
---

<MainLayout>
  <!-- Hero Section -->
  <header class="pb-32 md:pb-52 min-h-[60vh] flex flex-col justify-end">
    <p class="font-mono text-textAccent text-sm font-semibold mb-6 reveal-text">
      # 000
    </p>
    <h1
      class="font-black text-6xl md:text-9xl tracking-tighter text-foreground leading-[0.9] reveal-text"
    >
      tam<span class="text-accent tracking-normal">.</span>
    </h1>
    <div
      class="mt-8 text-xl md:text-2xl text-muted max-w-2xl leading-relaxed reveal-text"
    >
      Creative Software Engineer based in Dhaka.
    </div>
  </header>

  <!-- About Section -->
  <Section title="About" index="001" hasBorder={false}>
    <div class="space-y-12 min-h-[40vh]">
      <div
        class="grid grid-cols-2 gap-8 text-sm font-mono uppercase tracking-wider"
      >
        {
          ABOUT_INFO.map((info) => (
            <div>
              <p class="text-textAccent mb-4 reveal-text">{info.label}</p>
              <p
                class={`reveal-text ${
                  info.highlight ? "text-accent" : "text-foreground"
                }`}
              >
                {info.value}
              </p>
            </div>
          ))
        }
      </div>
      <p
        class="text-xl leading-relaxed text-foreground/50 font-light reveal-text"
      >
        <span class="text-foreground font-normal">
          I bridge strategic vision with technical expertise.
        </span>{" "}
        Proficient in an assortment of technologies including JavaScript, TypeScript,
        C#, and Python. My focus is ensuring products are robust, scalable, and user-focused.
      </p>
    </div>
  </Section>

  <!-- Proficiencies Section -->
  <Section title="Proficiencies" index="002">
    <div class="grid sm:grid-cols-2 gap-12">
      {
        SKILL_SETS.map((skillSet) => (
          <div>
            <h3 class="text-sm font-mono uppercase tracking-wider text-textAccent mb-4 reveal-text">
              {skillSet.category}
            </h3>
            <ul class="space-y-3 text-muted">
              {skillSet.items.map((item) => (
                <li class="hover:text-accent transition-colors duration-200 cursor-hover reveal-text">
                  {item}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </Section>

  <!-- Work Section -->
  <Section title="Work" index="003">
    <div class="space-y-20">
      {JOBS.map((job) => <JobCard job={job} />)}
    </div>
  </Section>

  <!-- Honors Section -->
  <Section title="Honors" index="004">
    <div class="space-y-12">
      {HONORS.map((honor) => <HonorCard honor={honor} />)}
    </div>
  </Section>

  <!-- Projects Section -->
  <Section title="Projects" index="005">
    <div class="space-y-12">
      {PROJECTS.map((project) => <ProjectCard project={project} />)}
    </div>
  </Section>
</MainLayout>
