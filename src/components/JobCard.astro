---
const { job } = Astro.props;
---

<div class="group">
  <div class="flex flex-row w-full items-center justify-between mb-3">
    <h3
      class="text-2xl font-display font-bold text-foreground reveal-text group-hover:text-accent transition duration-300 cursor-hover"
    >
      {job.company} {job.country ? <span class="text-xs text-textAccent">{job.country}</span> : ""}
    </h3>
    {
      job.current && (
        <span class="text-xs font-mono reveal-pop border border-foreground/5 text-accent/80 px-3 py-1 rounded-full">
          Current
        </span>
      )
    }
  </div>
  <div
    class="text-sm font-mono text-textAccent mb-6 flex flex-wrap gap-x-4 gap-y-1 reveal-text"
  >
    <span>{job.role}</span>
    <span class="text-foreground/20">/</span>
    <span>{job.period}</span>
  </div>
  <p class="text-muted leading-relaxed max-w-2xl text-lg reveal-text">
    {job.description}
  </p>
</div>
