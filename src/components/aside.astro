---
import Menu from "@/components/menu.astro";
import Logo from "@/components/logo.astro";
---

<!-- Sidebar Navigation -->
<aside
  id="navigation-sidebar"
  class="fixed top-0 left-0 w-svw lg:h-svh lg:w-[10vw] lg:max-w-[100px] lg:border-r border-foreground/10 flex lg:flex-col justify-between px-8 py-4 lg:px-0 lg:py-12 items-center z-50 bg-linear from-background to-transparent lg:bg-transparent backdrop-blur-xs lg:backdrop-blur-none"
>
  <Logo />
  <Menu />
</aside>

<script>
  import { gsap } from "@/configs/gsap.config";

  const initAside = () => {
    const asideTimeline = gsap.timeline();

    asideTimeline.from(
      "#navigation-sidebar",
      { y: "100vh", ease: "power2.out" },
      1
    );

    asideTimeline.from(
      "#navigation-sidebar > *",
      { y: 20, opacity: 0, ease: "power2.out", stagger: 0.2 },
      1.5
    );
  };

  document.addEventListener("DOMContentLoaded", initAside);
</script>
